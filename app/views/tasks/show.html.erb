<h1><%= @task.title %></h1>
<%= link_to "Edit this task", task_edit_path(@task) %>
<p><%= @task.details %></p>
<div>
<% if @task.completed %>
  <i class="fa-regular fa-square-check"></i><p>This task is completed</p>
<% else %>
  <p class="fa-regular fa-square">This task is not completed yet</p>
<% end %>
</div>
<div>
<%= link_to "delete", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>
<div>
 <%= link_to "Back to list", tasks_path %>
</div>
